{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "lib": ["es6", "dom", "es2016", "ES2021"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test-utils"
  ]
}
